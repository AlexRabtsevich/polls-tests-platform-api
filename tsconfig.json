{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@users/*": ["src/users/*"],
      "@auth/*": ["src/auth/*"],
      "@refresh-token/*": ["src/refresh-token/*"],
      "@answers/*": ["src/answers/*"],
      "@polls/*": ["src/polls/*"]
    }
  }
}